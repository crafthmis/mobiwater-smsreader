<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <include layout="@layout/app_bar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="5.0dip"
                app:cardElevation="2.0dip"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginTop="7.0dip"
                        android:text="Tank Name"
                        android:textSize="18.0sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/tank_name"
                        android:layout_width="fill_parent"
                        android:layout_height="30.0dip"
                        android:layout_margin="7.0dip"
                        android:background="@drawable/rounded_border_dark"
                        android:hint="Tank Name"
                        android:inputType="text"
                        android:paddingLeft="10.0dip"
                        android:textColorHint="@color/colorDarkGrey"
                        android:textSize="15.0sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginTop="7.0dip"
                        android:text="Maximum Height"
                        android:textSize="18.0sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/maximum_height"
                        android:layout_width="fill_parent"
                        android:layout_height="30.0dip"
                        android:layout_margin="7.0dip"
                        android:background="@drawable/rounded_border_dark"
                        android:hint="Maximum Height (in Meters)"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10.0dip"
                        android:textColorHint="@color/colorDarkGrey"
                        android:textSize="15.0sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginTop="7.0dip"
                        android:text="Upper Limit"
                        android:textSize="18.0sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/upper_limit"
                        android:layout_width="fill_parent"
                        android:layout_height="30.0dip"
                        android:layout_margin="7.0dip"
                        android:background="@drawable/rounded_border_dark"
                        android:hint="Upper Limit"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10.0dip"
                        android:textColorHint="@color/colorDarkGrey"
                        android:textSize="15.0sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginTop="7.0dip"
                        android:text="Lower Limit"
                        android:textSize="18.0sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/lower_limit"
                        android:layout_width="fill_parent"
                        android:layout_height="30.0dip"
                        android:layout_margin="7.0dip"
                        android:background="@drawable/rounded_border_dark"
                        android:hint="Lower Limit"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10.0dip"
                        android:textColorHint="@color/colorDarkGrey"
                        android:textSize="15.0sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginTop="7.0dip"
                        android:text="Phone Number"
                        android:textSize="18.0sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="fill_parent"
                        android:layout_height="30.0dip"
                        android:layout_margin="7.0dip"
                        android:background="@drawable/rounded_border_dark"
                        android:hint="Phone Number e.g. (0714812954)"
                        android:inputType="phone"
                        android:paddingLeft="10.0dip"
                        android:textColorHint="@color/colorDarkGrey"
                        android:textSize="15.0sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginTop="7.0dip"
                        android:text="Base Area"
                        android:textSize="18.0sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/base_area"
                        android:layout_width="fill_parent"
                        android:layout_height="30.0dip"
                        android:layout_margin="7.0dip"
                        android:background="@drawable/rounded_border_dark"
                        android:hint="Base Area (in Meters)"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10.0dip"
                        android:textColorHint="@color/colorDarkGrey"
                        android:textSize="15.0sp" />

                    <Button
                        android:id="@+id/btn_add_setting"
                        style="?android:textAppearanceSmall"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2.0dip"
                        android:background="@drawable/rounded_button"
                        android:padding="10.0dip"
                        android:text="Add Setting"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </ScrollView>
    </LinearLayout>
</LinearLayout>