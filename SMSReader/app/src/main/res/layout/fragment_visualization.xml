<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorGrey"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="8.0"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:gravity="right"
                android:prompt="@string/spinner_title"
                android:spinnerMode="dialog" />

            <RelativeLayout
                android:id="@+id/widget_view"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="6.0"
                android:focusable="true">

                <ImageView
                    android:id="@+id/percent100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/lic_100"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/percent90"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/lic_90"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/percent80"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/lic_80"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/percent70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/lic_70"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/percent60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/lic_60"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/percent50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/lic_50"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/percent40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/lic_40"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/percent30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/lic_30"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/percent20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/lic_20"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/percent10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/lic_10"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/battery_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/battery" />

                <TextView
                    android:id="@+id/batterytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/battery_view"
                    android:layout_alignLeft="@+id/battery_view"
                    android:layout_alignRight="@+id/battery_view"
                    android:layout_alignTop="@+id/battery_view"
                    android:gravity="center"
                    android:maxLines="1"
                    android:shadowColor="@android:color/background_dark"
                    android:shadowDx="3.0"
                    android:shadowDy="3.0"
                    android:shadowRadius="4.0"
                    android:textColor="@android:color/white"
                    android:textSize="30.0sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>

            <TextView
                android:id="@+id/meterreading"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:text="mwaura"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="10.0dip"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>