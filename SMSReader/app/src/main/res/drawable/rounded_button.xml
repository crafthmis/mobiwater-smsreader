<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="@color/colorWhite" />
            <gradient android:startColor="#512da8" android:endColor="#b39ddb" android:angle="-90.0" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="@color/colorWhite" />
            <solid android:color="#7e57c2" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="@color/colorWhite" />
            <gradient android:startColor="#b39ddb" android:endColor="#512da8" android:angle="-90.0" />
        </shape>
    </item>
</selector>
